{% extends 'base.html.twig' %}

{% block body %}
    <h1>Product</h1>

    <table class="table table-bordered" style="background-color: black">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Uom</th>
                <td>{{ product.uoM }}</td>
            </tr>
            <tr>
                <th>Specification</th>
                <td>{% for key, product in product.tmp %}  <li>{{ key }} -{{ product }}</li> {% endfor %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('product_index') }}"><button type="button">Powr√≥t</button><</a>
        </li>
        <li>
            <a href="{{ path('product_edit', { 'id': product.id }) }}"><button type="button">Edycja</button></a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
