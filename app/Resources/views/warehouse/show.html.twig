{% extends 'base.html.twig' %}

{% block body %}
    <h1>Warehouse</h1>

    <table class="table table-bordered" style="background-color: black">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ warehouse.id }}</td>
            </tr>
            <tr>
                <th>Material</th>
                <td>{{ warehouse.material }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ warehouse.amount }}</td>
            </tr>
            <tr>
                <th>Uom</th>
                <td>{{ warehouse.uoM }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('warehouse_index') }}"><button type="button">Powrót</button></a>
        </li>
        <li>
            <a href="{{ path('warehouse_edit', { 'id': warehouse.id }) }}"><button type="button">Edycja</button></a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Usuń">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
